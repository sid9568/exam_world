      <!-- Mobile Menu Toggle Button -->
      <div class="flex items-center md:hidden">
        <button id="menu-toggle"
          class="text-gray-400 hover:text-white focus:outline-none focus:text-white"
          aria-label="Toggle menu">
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Menu Items -->
  <div class="hidden md:flex md:items-center md:space-x-4" id="menu-items">
  <a href="<%=root_path%>" class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-xl font-medium" data-turbo-frame="new_page">Home</a>
  
  <div class="relative inline-block">
    <a href="#" class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-xl font-medium">Css University</a>
    <div class="hidden absolute bg-info text-white py-2 mt-2 rounded-md">
      <a href="<%=exam_ug_index_path%>" class="block px-4 py-2 hover:bg-primary-900 text-2xl" data-turbo-frame="new_page">UG</a>
